	)
	(if (TipoCatatonico EcolaliaOEcopraxia ?Sin & :(eq ?Sin si))
		then	(assert ?total2 (+ ?total2 1)))
	)

	(assert (Sintomas (CantidadSintomas ?total)))
	(assert (TipoCatatonico (CantidadSintomas ?total2)))


)