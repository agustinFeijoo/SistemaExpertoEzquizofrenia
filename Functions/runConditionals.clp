		then	(assert ?total2 (+ ?total2 1)))
	)
	(if (TipoCatatonico ActividadMotoraExcesiva ?Sin & :(eq ?Sin si))
		then	(assert ?total2 (+ ?total2 1)))
	)
	(if (TipoCatatonico NegativismoExtremoOMutismo ?Sin & :(eq ?Sin si))
