	(bind ?total 0)
	(bind ?total2 0)

	(if (eq (Sintomas (IdeasDelirantes ?Sin)) si))
		then	(assert ?total (+ ?total 1)))
	)
	(if (Sintomas Alucinaciones ?Sin & :(eq ?Sin si))
		then	(assert ?total (+ ?total 1)))
	)
	(if (Sintomas LenguajeDesorganizado ?Sin & :(eq ?Sin si))
		then	(assert ?total (+ ?total 1)))
	)
	(if (Sintomas ComportamientoCatatonico ?Sin & :(eq ?Sin si))
		then	(assert ?total (+ ?total 1)))
	)
